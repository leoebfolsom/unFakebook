{
  "manifest_version": 2,

  "name": "unFakebook",
  "description": "This extension removes fake news from your Facebook feed.",
  "version": "0.0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "unFakebook"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["unfakebook.js"]
    }
  ],
  "permissions": [
    "tabs", "https://www.facebook.com/*"
  ],
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" }

}
